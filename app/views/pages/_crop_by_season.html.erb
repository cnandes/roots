<%# ------------- Plot crop emojis in bed (max 12) ------------- %>
<% bed.future_crops.where(season: season).first(12).each do |crop| %>

<%# ------------- If less that 4 crops in bed ------------- %>
  <% if bed.future_crops.length <= 4 %>
    <% 3.times do %>
      <h2 class="m-2" data-toggle="tooltip" data-placement="top" title="<%= crop.veggie.name %> x <%= crop.quantity %>">
        <%= crop.emoji %>
      </h2>
    <% end %>

  <%# ------------- If 5-6 crops in bed ------------- %>
  <% elsif bed.future_crops.length <= 6 %>
    <% 2.times do %>
      <h2 class="m-2" data-toggle="tooltip" data-placement="top" title="<%= crop.veggie.name %> x <%= crop.quantity %>">
        <%= crop.emoji %>
      </h2>
    <% end %>

  <%# ------------- If more than 6 crops in bed ------------- %>
  <% else %>
    <h2 class="m-2" data-toggle="tooltip" data-placement="top" title="<%= crop.veggie.name %> x <%= crop.quantity %>">
      <%= crop.emoji %>
    </h2>
  <% end %>
<% end %>
