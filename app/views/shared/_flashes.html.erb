<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1 talkbubble" role="alert">
    <%= image_tag "notice_worm.png", class: "worm-helper" %>
    <div style="height: 50px;" class="textarea d-flex justify-content-between align-items-center">
      <p>
        <%= notice %>
      </p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
